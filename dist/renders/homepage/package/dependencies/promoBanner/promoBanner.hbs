<div class="amp-ca-promo-banner-wrap">
    <div class="amp-ca-promo-banner">
        <div class="amp-ca-promo-banner-wrap">
            {{#each bannerSection}}
                <div class="amp-ca-promo-block ca-{{@index}}">
                    <div class="amp-ca-promo-wrap">
                        <a href="{{link}}">
                            <picture class="amp-ca-promo-ico">
                                <img src="//{{icon.defaultHost}}/i/{{icon.endpoint}}/{{icon.name}}?w=40&h=40"
                                     srcset="//{{icon.defaultHost}}/i/{{icon.endpoint}}/{{icon.name}}?w=40&h=40 1x, //{{icon.defaultHost}}/i/{{icon.endpoint}}/{{icon.name}}?w=80&h=80 2x"
                                     class="amp-ca-image-pic"/>
                            </picture>
                            <div class="amp-ca-promo-text-wrap">
                                <div class="amp-ca-promo-head-text">{{topLine}}</div>
                                <div class="amp-ca-promo-content-text">{{bottomLine}}</div>
                            </div>
                        </a>
                    </div>
                </div>{{/each}}
        </div>
    </div>
</div>
